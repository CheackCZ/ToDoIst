<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VanocniProjekt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="actionOverflowButtonStyle">@style/ThreeDotsColor</item>

    </style>

    //Theme for the loading screen
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>


    //Bottom sheet dialog style
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    //Theme, that changes colors for the time picker
    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/Yellow</item>
        <item name="android:textColorSecondary">@color/Yellow </item>
        <item name="android:windowBackground">@color/Gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/Gray</item>
        <item name="android:textColorSecondaryInverse">@color/Gray</item>
        <item name="android:textColorPrimaryDisableOnly">@color/Yellow</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColorTertiary">@color/Yellow</item>
        <item name="colorControlActivated">@color/Yellow</item>
        <item name="titleTextColor">@color/black</item>
        
        <item name="android:buttonBarPositiveButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DatePickerTheme.ButtonBarButtonStyle</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DatePickerTheme.ButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/Yellow</item>
    </style>


    //Theme, that changes colors for the calendar
    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/Yellow</item>
        <item name="colorSurface">@color/Gray</item>
        <item name="colorOnSurface">@color/Yellow</item>
        <item name="android:textColorPrimary">@color/Yellow</item>
    </style>


    <style name="Theme.VanocniProjekt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.VanocniProjekt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VanocniProjekt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    //Color of the three dots on the toolbar
    <style name="ThreeDotsColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">#000000</item>
    </style>
    
</resources>